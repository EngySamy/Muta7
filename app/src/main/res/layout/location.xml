<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="0dp"
                android:minHeight="72dp">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/space_city"
                        android:id="@+id/SpaceCityValue"
                        android:paddingRight="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="0dp"
                        android:gravity="center_vertical"
                        android:maxLength="@integer/max_length_city_district">
                    </AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="0dp"
                android:minHeight="72dp">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/space_district"
                        android:id="@+id/SpaceDistrictValue"
                        android:paddingRight="0dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="0dp"
                        android:gravity="center_vertical"
                        android:maxLength="@integer/max_length_city_district">
                    </AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="0dp"
            android:minHeight="72dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/space_map"
                android:id="@+id/SpaceMapText"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:layout_weight="1"
                android:textSize="18sp">
            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/go_to_map"
                android:id="@+id/goToMap"
                android:layout_weight="2" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="0dp"
            android:minHeight="72dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/space_address"
                android:id="@+id/SpaceAddressValue"
                android:paddingRight="0dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:gravity="center_vertical"
                android:maxLength="@integer/max_length_full_address">
            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationLayout"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove -"
                android:id="@+id/removeNearbyPlace"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add +"
                android:id="@+id/addNearbyPlace"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:gravity="bottom|end">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:id="@+id/backInLocation"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:id="@+id/nextInLocation"
                android:layout_weight="1"/>

        </LinearLayout>





    </LinearLayout>
</ScrollView>